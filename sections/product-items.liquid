<section class="text-gray-600 body-font">
    <div class="container px-5 py-24 mx-auto flex flex-wrap">
      <div class="flex flex-wrap -m-4">
            {% for block in section.blocks %}
        <div class="p-4 lg:w-1/2 md:w-full">
          <div class="flex border-2 rounded-lg border-gray-200 border-opacity-50 p-8 sm:flex-row flex-col">
            <div class="w-16 h-16 sm:mr-8 sm:mb-0 mb-4 inline-flex items-center justify-center rounded-full bg-purple-100 text-purple-500 flex-shrink-0">
              <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-8 h-8" viewBox="0 0 24 24">
                <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
              </svg>
            </div>
            <div class="flex-grow">
              <h2 class="text-gray-900 text-lg title-font font-medium mb-3">{{block.settings.title-box}}</h2>
              <p class="leading-relaxed text-base">{{block.settings.subtitle-box}}</p>
              <a href='{{block.settings.click_link}}' class="mt-3 text-purple-500 inline-flex items-center">{{block.settings.link_text}}
                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-2" viewBox="0 0 24 24">
                  <path d="M5 12h14M12 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
    {% endfor %}
     
      </div>
    </div>
  </section>



  {% schema %}
  {
     
     "blocks": [{
         "type": "text",
         "name": "Feature block",
         "settings": [{
                 "type": "image_picker",
                 "id": "icon-box",
                 "label": "Icon"
                 // "default": "Some Awesome title"
             },
             {
                 "type": "text",
                 "id": "title-box",
                 "label": "Title",
                 "default": "Some Awesome title"
             },
             {
                 "type": "textarea",
                 "id": "subtitle-box",
                 "label": "Subtitle",
                 "default": "Ut feugiat libero at lorem ornare commodo. Mauris eleifend velit quis sem interdum elementum. Vivamus sit amet dolor pharetra, bibendum quam in, tempor metus."
             },
                            {
                "type": "url",
                "id": "click_link",
                "label": "Button link"
                },
                {
                 "type": "text",
                 "id": "link_text",
                 "label": "Text Link",
                 "default": "Click here to learn more"
             }

            ]
        }],

     "presets": [{
         "name": "Features",
         "category": "Custom"
     }]
 
  }
   {% endschema %}
 